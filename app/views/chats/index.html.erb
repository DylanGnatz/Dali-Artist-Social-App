<h1>Chats</h1>

<div class="grid grid-cols-2">
    <%= link_to "New Chat", friends_path, :class => 'btn btn-secondary'%>

    <div><h3>Current Chats</h3></div>
    <% @chats.each do |chat| %>
        <div>
            <%= link_to chat[:name], chat_path(chat[:id]) %>
        </div>
    <% end %>
</div>