<h1 class="font-bold text-8xl"> <%= @name %> - Chat </h1>

<br/>
<br/>

<div class="flex flex-col gap-y-1">
  <% @messages.each do |message| %>

    <% if message[:from_profile] %>
      <div class="ml-auto p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex flex-col">
          <div class="text-xl">
            <%= message[:msg] %>
          </div>       
          <div class="text-sm">
            (Me)
          </div>
      </div>
    <% end %>
    <% if !message[:from_profile] %>
      <div class="mr-auto p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex flex-col">
          <div class="text-xl">
            <%= message[:msg] %>
          </div>       
          <div class="text-sm">
            (<%= message[:sender] %>)   
          </div>
      </div>
    <% end%>

  <% end %>
</div>

<br />
<br />

<%= form_tag chats_messages_path(chat_id: @chat.id), :class => 'form-horizontal' do %>
    <%= text_field :chats_message, :msg, :class => 'form-control' %>
    <%= submit_tag 'Send', :class => 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
<% end %>