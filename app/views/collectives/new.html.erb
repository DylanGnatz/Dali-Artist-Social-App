<h1 class="font-bold text-8xl"> New Collective </h1>

<br/>
<br/>

<%= form_tag collectives_path, :method => :post do %>
    <div class="flex flex-col items-stretch gap-2">
        <div class="p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex flex-col items-stretch">
          <h3 class="font-bold text-4xl">Collective Name</h3>
          <br/>
          <%= text_field :collective, 'name' %>
        </div>
        <div class="p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex flex-col items-stretch">
          <h3 class="font-bold text-4xl">Members</h3>
          <br/>
          <% @friends.each do |friend| %>
            <div class="form-check  form-check-inline">
                <%= label_tag "members[#{friend.username}]", friend.username %>
                <%= check_box_tag "members[#{friend.id}]", '1', false %>
            </div>
          <% end %>
        </div>
        <div class="flex flex-row">
          <%= submit_tag 'Create Collective', class:"text-amber-900 bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
          <%= link_to 'Cancel', profiles_index_path, class:"bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline"%>
        </div>
    </div>
<% end %>
