<h1 class="font-bold text-8xl"> Collectives </h1>

<br/>
<br/>

<div class="flex flex-col items-stretch gap-y-1">
  <% @collectives.each do |collective| %>
      <%= link_to collective[:name], collective_path(collective[:id]),
        class: "text-2xl font-bold p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex justify-between items-center hover:bg-orange-200" %>
  <% end %>
</div>

<br/>
<br/>

<%= link_to "New Collective", new_collective_path, class: "bg-rose-400 hover:bg-rose-500 font-bold py-2 px-4 rounded text-center focus:outline-none focus:shadow-outline w-40 mx-auto"%>
