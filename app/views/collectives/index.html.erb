<h1 class="font-bold text-8xl first-letter:text-rose-500"> Collectives </h1>

<br/>

<div class="flex flex-col items-stretch gap-y-1">
  <% @collectives.each do |collective| %>
      <%= link_to collective[:name], collective_path(collective[:id]),
        class: "text-2xl font-bold p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex justify-between items-center hover:bg-orange-200" %>
  <% end %>
</div>

<br/>

<%= link_to "New Collective", new_collective_path, class: "text-amber-900 bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline cursor-pointer"%>
