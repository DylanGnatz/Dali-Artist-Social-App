<% if @profile %>
  <h1 class="font-bold text-8xl first-letter:text-rose-500">Search Settings for <%= @profile.username %></h1>

  <br/>
  <%= form_with url: "/edit", method: :get do |form| %>
    <h4 class="text-xl"> Search Radius</h4>
    <%= form.number_field :search_radius, in: 10.0..200.0, step: 5.0 %>
    <h4 class="text-xl"> Restrict search to users of the same gender identity?</h4>
    <%= form.radio_button :gender_restrict, "True" %>
    <%= form.label :gender_restrict, "Yes" %>
    <%= form.radio_button :gender_restrict, "False" %>
    <%= form.label :gender_restrict, "No" %>

    <h4 class="text-xl"> Restrict search to users with the same profile tags?</h4>
    <%= form.radio_button :tag_restrict, "True" %>
    <%= form.label :tag_restrict, "Yes" %>
    <%= form.radio_button :tag_restrict, "False" %>
    <%= form.label :tag_restrict, "No" %>

    <h4 class="text-xl"> Which would you like to appear in your search?</h4>
    <%= form.check_box :show_profiles %>
    <%= form.label :show_profiles, "Profiles" %>
    <%= form.check_box :show_events %>
    <%= form.label :show_events, "Events" %>
    <%= form.check_box :show_collectives %>
    <%= form.label :show_collectives, "Collectives" %>
  <% end %>
<% end %>

