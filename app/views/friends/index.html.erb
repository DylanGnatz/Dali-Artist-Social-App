<h1 class="font-bold text-8xl"> My Matches </h1>

<br/>
<br/>

<div class="flex flex-col items-stretch gap-y-1">
  <% @friends.each do |frndObj| %>

    <div class="p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex justify-between items-center">
      <div class="font-bold text-2xl">
          <%= frndObj[:username] %>
      </div>

      <div class="flex gap-x-2">
        <div class="bg-rose-400 hover:bg-rose-500 font-bold py-2 px-4 rounded-full text-center focus:outline-none focus:shadow-outline">
            <%= button_to 'Chat', {:controller => "chats", :action => "create", :username => frndObj[:username]} , {:method=>:post, :id => frndObj[:username] } %>
        </div>
        <div class="bg-rose-400 hover:bg-rose-500 font-bold py-2 px-4 rounded-full text-center focus:outline-none focus:shadow-outline">
            <%= button_to  'View Profile', profiles_path(frndObj[:id]), :method => :get %>
        </div>
      </div>
    </div>

  <% end %>
</div>
