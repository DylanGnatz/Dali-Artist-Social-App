<h2>Friends</h2>

<div class="column">
    <% @friends.each do |frndObj| %>
        <div class="row">
            <span>
                <%= frndObj[:username] %>
            </span>
            <span>
                <%= button_to 'Chat', {:controller => "chats", :action => "create", :username => frndObj[:username]} , {:method=>:post, :form_class => "btn btn-primary"} %>
                <%= button_to  'View Profile', profiles_path(frndObj[:id]), :method => :get, class:"bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline" %>
            </span>
        </div>
    </div>
<% end %>
