<h1 class="font-bold text-8xl"> My Feed </h1>

<br/>
<br/>

<div class="flex flex-col items-stretch gap-y-1">
  <% @feed_items.each do |feed_item| %>
    <% if feed_item[:type] == :artwork %>
      <div class="p-3 border-2 border-amber-700 rounded-lg bg-orange-100 flex flex-col">
        <div class="font-bold text-gray-500">
            <%= feed_item[:artwork].profile.username %> added new artwork
        </div>
        <div class="font-bold text-2xl">
            <%= feed_item[:artwork].title %>
        </div>
      </div>
    <% end %>
    <% if feed_item[:type] == :event %>
      <div class="p-3 border-2 border-sky-700 rounded-lg bg-sky-100 flex flex-col">
        <div class="font-bold text-gray-500">
            <%= feed_item[:event].profile.username %> added new event
        </div>
        <div class="font-bold text-2xl">
            <%= feed_item[:event].title %>
        </div>
      </div>
    <% end %>

  <% end %>
</div>